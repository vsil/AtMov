<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

  <EditText
      android:id="@+id/TempMinInput"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:ems="10"
      android:inputType="numberDecimal"
      android:hint="minimum Temperature"/>

  <Button
      android:id="@+id/TempMinButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@+id/TempMinInput"
      android:layout_toRightOf="@+id/TempMinInput"
      android:layout_alignParentRight="true"
      android:text="Set Alarm" />

  <EditText
      android:id="@+id/TempMaxInput"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/TempMinInput"
      android:ems="10"
      android:inputType="numberDecimal"
      android:hint="maximum Temperature"/>
  <Button
      android:id="@+id/TempMaxButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@+id/TempMaxInput"
      android:layout_toRightOf="@+id/TempMaxInput"
      android:layout_below="@+id/TempMinButton"
      android:layout_alignParentRight="true"
      android:text="Set Alarm" />


</RelativeLayout>